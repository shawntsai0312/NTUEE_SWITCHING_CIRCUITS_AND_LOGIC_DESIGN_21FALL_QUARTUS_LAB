`timescale 1 ps/ 1 ps
module SD_vlg_sample_tst(
	clk,
	rst_n,
	X,
	sampler_tx
);
input  clk;
input  rst_n;
input  X;
output sampler_tx;

reg sample;
time current_time;
always @(clk or rst_n or X)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module SD_vlg_check_tst (
	Z,
	sampler_rx
);
input  Z;
input sampler_rx;

reg  Z_expected;

reg  Z_prev;

reg  Z_expected_prev;

reg  last_Z_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:1] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 1'b1;
end

// update real /o prevs

always @(trigger)
begin
	Z_prev = Z;
end

// update expected /o prevs

always @(trigger)
begin
	Z_expected_prev = Z_expected;
end



// expected Z
initial
begin
	Z_expected = 1'bX;
end 
// generate trigger
always @(Z_expected or Z)
begin
	trigger <= ~trigger;
end

always @(posedge sampler_rx or negedge sampler_rx)
begin
`ifdef debug_tbench
	$display("Scanning pattern %d @time = %t",i,$realtime );
	i = i + 1;
	$display("| expected Z = %b | ",Z_expected_prev);
	$display("| real Z = %b | ",Z_prev);
`endif
	if (
		( Z_expected_prev !== 1'bx ) && ( Z_prev !== Z_expected_prev )
		&& ((Z_expected_prev !== last_Z_exp) ||
			on_first_change[1])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port Z :: @time = %t",  $realtime);
		$display ("     Expected value = %b", Z_expected_prev);
		$display ("     Real value = %b", Z_prev);
		nummismatches = nummismatches + 1;
		on_first_change[1] = 1'b0;
		last_Z_exp = Z_expected_prev;
	end

	trigger <= ~trigger;
end
initial 

begin 
$timeformat(-12,3," ps",6);
#1000000;
if (nummismatches > 0)
	$display ("%d mismatched vectors : Simulation failed !",nummismatches);
else
	$display ("Simulation passed !");
$finish;
end 
endmodule

module SD_vlg_vec_tst();
// constants                                           
// general purpose registers
reg clk;
reg rst_n;
reg X;
// wires                                               
wire Z;

wire sampler;                             

// assign statements (if any)                          
SD i1 (
// port map - connection between master ports and signals/registers   
	.clk(clk),
	.rst_n(rst_n),
	.X(X),
	.Z(Z)
);

// clk
always
begin
	clk = 1'b0;
	clk = #10000 1'b1;
	#10000;
end 

// rst_n
initial
begin
	rst_n = 1'b0;
	rst_n = #40000 1'b1;
	rst_n = #950000 1'b0;
end 

// X
initial
begin
	X = 1'b0;
	X = #60000 1'b1;
	X = #80000 1'b0;
	X = #100000 1'b1;
	X = #20000 1'b0;
	X = #40000 1'b1;
	X = #20000 1'b0;
	X = #40000 1'b1;
	X = #40000 1'b0;
	X = #60000 1'b1;
	X = #100000 1'b0;
	X = #20000 1'b1;
	X = #20000 1'b0;
	X = #20000 1'b1;
	X = #60000 1'b0;
	X = #60000 1'b1;
	X = #40000 1'b0;
	X = #20000 1'b1;
	X = #20000 1'b0;
	X = #20000 1'b1;
	X = #60000 1'b0;
	X = #20000 1'b1;
	X = #60000 1'b0;
end 

SD_vlg_sample_tst tb_sample (
	.clk(clk),
	.rst_n(rst_n),
	.X(X),
	.sampler_tx(sampler)
);

SD_vlg_check_tst tb_out(
	.Z(Z),
	.sampler_rx(sampler)
);
endmodule

